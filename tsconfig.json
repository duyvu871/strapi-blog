{
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "allowJs": true,
        "inlineSources": false,
        "isolatedModules": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "target": "ES2020",
        "sourceMap": true,
        "removeComments": true,
    
        "paths": {
            "*": [
                "*"
            ]
        },
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}