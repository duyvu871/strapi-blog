    <!-- Scroll to top CSS -->
    <link href="/style/global.css" rel="stylesheet">
    <link href="/style/scroll-to-top.css" rel="stylesheet">
    <!-- Các CSS tùy chỉnh -->
    {{#each cssFiles}}
    <link href="/style/{{this}}" rel="stylesheet">
    {{/each}}
