<body class="min-h-screen bg-gray-50 flex flex-col font-body ">
    <!-- Header -->
    {{> header/header }}

    <!-- Menu Sidebar -->
    {{> menu/menu }}

    <!-- Main Content -->
    <main class="flex-grow">
        {{{body}}}
    </main>

    <!-- Footer -->
    {{> footer/footer }}

    <!-- Scroll to Top Button -->
    {{> scroll-to-top }}

    <!-- Notification Component -->
    {{#if notification}}
    {{> components/notification notification=notification }}
    {{/if}}

    <!-- Alpine.js từ CDN -->
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <!-- jQuery từ CDN -->
    <script defer src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <!-- Lenis từ CDN -->
    <script defer src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.27/bundled/lenis.min.js"></script>
    <!-- GSAP từ CDN -->
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    <!-- Swiper JS -->
    <script defer src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <!-- Scroll Lock JS -->
    <script defer src="/script/scroll-lock.js"></script>
    <!-- Scroll to top JS -->
    <script defer src="/script/scroll-to-top.js"></script>
    <script defer src="/script/menu.js"></script>
    <!-- Các JS tùy chỉnh -->
    {{#each jsFiles}}
    <script defer src="/script/{{this}}"></script>
    {{/each}}
</body>

</html>