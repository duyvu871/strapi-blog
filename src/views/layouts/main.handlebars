    <link rel="icon" href="/favicon.ico" sizes="image/x-icon">
    <link rel="manifest" href="/site.webmanifest">
    <!-- Thẻ Accessibility -->
    <meta name="theme-color" content="#9333ea">
    <meta name="color-scheme" content="light dark">
