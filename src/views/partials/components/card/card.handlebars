{{!-- 
Component Card - Thẻ hiển thị nội dung với nhiều biến thể
Sử dụng: {{> components/card/card title="Tiêu đề" content="Nội dung" variant="default" class="my-custom-class"}}
Các variant: default, bordered, shadowed, interactive
--}}

<div 
    x-data="{ hover: false }"
    x-on:mouseenter="hover = true" 
    x-on:mouseleave="hover = false"
    class="
        rounded-lg overflow-hidden
        {{#if (eq variant 'default')}}
            bg-white
        {{else if (eq variant 'bordered')}}
            bg-white border border-gray-200
        {{else if (eq variant 'shadowed')}}
            bg-white shadow-md
        {{else if (eq variant 'interactive')}}
            bg-white shadow-sm hover:shadow-md transition-shadow duration-200
        {{else}}
            bg-white shadow-sm
        {{/if}}
    {{class}}
    "
>
    {{#if image}}
        <div class="relative">
            <img src="{{image}}" alt="{{imageAlt}}" class="w-full h-48 object-cover">
            {{#if badge}}
                <div class="absolute top-2 right-2 bg-blue-600 text-white text-xs font-bold px-2 py-1 rounded">{{badge}}</div>
            {{/if}}
        </div>
    {{/if}}

    <div class="p-4">
        {{#if title}}
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{{title}}</h3>
        {{/if}}
    
        {{#if subtitle}}
            <h4 class="text-sm text-gray-600 mb-3">{{subtitle}}</h4>
        {{/if}}
    
        {{#if content}}
            <p class="text-gray-700 mb-4">{{content}}</p>
        {{/if}}
    
        {{#if hasSlot}}
            {{{slot}}}
        {{/if}}
    
        {{#if footer}}
            <div class="mt-4 pt-3 border-t border-gray-100">
            {{footer}}
            </div>
        {{/if}}
    
        {{#if actions}}
            <div class="mt-4 flex justify-end space-x-2">
                {{{actions}}}
            </div>
        {{/if}}
    </div>
</div>