{{!--
Component Category Card - Thẻ hiển thị danh mục với hình nền và tiêu đề
Sử dụng: {{> components/category-card/category-card title="Tiêu đề" image="/path/to/image.jpg"}}
--}}
<a
  href="/category/{{slug}}"
  x-data="{ hover: false }"
  x-on:mouseenter="hover = true"
  x-on:mouseleave="hover = false"
  class="category-card relative block cursor-pointer overflow-hidden rounded-2xl h-40 sm:h-full aspect-[4/6] group {{class}}"
>
  {{#if thumbnail}}
    <img
      src="{{thumbnail}}"
      alt="{{name}}"
      class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
    >
    <div class="absolute inset-0 bg-black/40 group-hover:bg-black/50 transition-colors duration-300"></div>
  {{/if}}

  {{#if name}}
    <div class="absolute inset-0 flex items-center justify-center p-4">
      <h3 class="text-2xl md:text-3xl typo-title-font font-normal text-white text-center font-tiempos-headline">
        {{name}}
      </h3>
    </div>
  {{/if}}
</a>