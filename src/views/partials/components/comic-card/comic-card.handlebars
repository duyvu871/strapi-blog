{{!--
Component Comic Card - Thẻ hiển thị comic series với hình nền và tiêu đề
Sử dụng: {{> components/comic-card/comic-card title="Tiêu đề" description="Mô tả" slug="slug" publishedAt="2023-01-01"}}
--}}
<a
  href="/comic/{{slug}}"
  aria-label="Comic series {{title}}"
  x-data="{ hover: false }"
  x-on:mouseenter="hover = true"
  x-on:mouseleave="hover = false"
  class="comic-card relative block cursor-pointer overflow-hidden rounded-2xl h-40 sm:h-full aspect-[4/6] group {{class}}"
>
  {{#if thumbnail}}
    <img
      src="{{thumbnail}}"
      alt="{{title}} thumbnail"
      aria-label="Comic series {{title}}"
      class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
    >
    <div class="absolute inset-0 bg-black/40 group-hover:bg-black/50 transition-colors duration-300"></div>
  {{else}}
    <div class="absolute inset-0 bg-gradient-to-br from-purple-500 to-purple-800"></div>
  {{/if}}

  <div class="absolute inset-0 flex flex-col justify-between p-4">
    <div class="flex items-start justify-end">
      <span class="bg-purple-600 text-white text-xs px-2 py-1 rounded-full">Comic Series</span>
    </div>
    
    <div class="mt-auto">
      {{#if title}}
        <h3 class="text-xl md:text-2xl typo-title-font font-normal text-white font-tiempos-headline mb-2">
          {{title}}
        </h3>
      {{/if}}
      
      {{#if description}}
        <p class="text-sm text-white/80 line-clamp-2 mb-2">{{description}}</p>
      {{/if}}
      
      {{#if publishedAt}}
        <div class="text-xs text-white/70">{{formatDate publishedAt "DD/MM/YYYY"}}</div>
      {{/if}}
    </div>
  </div>
</a>