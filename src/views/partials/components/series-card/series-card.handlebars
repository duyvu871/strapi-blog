<div class="series-card relative w-full h-full bg-white rounded-3xl shadow-lg overflow-hidden transform transition-all duration-300 hover:shadow-xl">
    {{#if image}}
    <div class="relative w-full h-full overflow-hidden">
        <img src="{{image}}" alt="{{imageAlt}}" class="w-full h-full object-contain transform transition-transform duration-500 hover:scale-110" />
    </div>
    {{/if}}
    <div class="p-6 absolute bottom-5">
        {{#if title}}
        <h3 class="text-2xl font-tiempos-headline font-bold text-gray-900 mb-3">{{title}}</h3>
        {{/if}}
        {{#if description}}
        <p class="text-gray-600 text-base line-clamp-3 font-basis-grotesque">{{description}}</p>
        {{/if}}
    </div>
</div>