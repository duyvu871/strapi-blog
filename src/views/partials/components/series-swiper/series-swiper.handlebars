
<section id="series-section" class="py-12">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl typo-title-font font-normal italic text-center text-purple-800 mb-4">{{title}}</h2>
        <p class="text-center text-sm text-gray-600 mb-8 typo-title-font">{{subtitle}}</p>
        <div class="swiper series-swiper">
            <div class="swiper-wrapper">
                {{#each series}}
                    <div class="swiper-slide h-[600px] w-[400px]">
                        {{> components/series-card/series-card
                        title=this.title
                        description=this.description
                        image=this.thumbnail
                        imageAlt=this.title
                        }}
                    </div>
                {{/each}}
            </div>

