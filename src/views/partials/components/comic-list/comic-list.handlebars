{{!-- 
Component Comic List - Hiển thị danh sách các comic series
Sử dụng: {{> components/comic-list/comic-list title="Tiêu đề" subtitle="Phụ đề" comics=comics}}
--}}

<section class="py-20 {{class}}">
  <div class="container mx-auto px-4">
    {{#if subtitle}}
      <p class="text-sm md:text-base text-gray-600 text-center mb-2">{{subtitle}}</p>
    {{/if}}
    
    {{#if title}}
      <h2 class="text-4xl md:text-6xl typo-title-font italic text-purple-600 font-thin text-center mb-16">{{title}}</h2>
    {{/if}}
    
    {{#if comics}}
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {{#each comics}}
          {{> components/comic-card/comic-card 
            title=this.title 
            description=this.description
            slug=this.slug
            publishedAt=this.publishedAt
            thumbnail=this.thumbnail
            class="w-full"
          }}
        {{/each}}
      </div>
    {{else}}
      <div class="text-center py-10">
        <p class="text-gray-500">Không tìm thấy comic series nào</p>
      </div>
    {{/if}}
  </div>
</section>