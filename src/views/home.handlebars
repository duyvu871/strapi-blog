{{!--
<script src="/script/nav.js"></script> --}}
{{> components/related-post/related-post
    image=relatedArticle.thumbnail.url
    title=relatedArticle.title
    slug=relatedArticle.slug
}}
{{> nav/nav}}

<section class="mb-12">
    {{> components/category-list/category-list
        title="Chuyện người Việt kể"
        subtitle="Khám phá các chủ đề hấp dẫn"
        categories=categories
    }}
</section>

<div class="container mx-auto px-4">
    <h1 class="text-4xl md:text-6xl typo-title-font italic text-purple-600 font-thin text-center mb-16">Chuyện lôi cuốn</h1>

    <section class="mb-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{#each articles}}
                {{> components/article-card/article-card 
                    title=this.title 
                    excerpt=this.description 
                    image=this.thumbnail.url 
                    imageAlt=this.thumbnail.alternativeText
                    type=this.type
                    category=this.categories.name
                    publishDate=(formatDate this.publishedAt)
                    url=(concat "/article/" this.slug)
                }}
            {{/each}}
        </div>
    </section>

</div>